<!DOCTYPE html>
<html lang="{{ language() }}">
	{% include 'header.twig' %}
	<body class="{{ controller.body_classes|join(' ') }}">
		<div id="wrapper" class="flex-column">
			{{ controller.navbar }}
			{{ controller.categoryNavbar }}
			<div id="content-wrapper" class="d-flex flex-row">
				{{ controller.sidebar }}
				{% block to_top %}
					<a class='scroll-to-top rounded' href='#'>
						<i class='fas fa-angle-up'></i>
					</a>
				{% endblock %}
				<div class='container-fluid px-0 p-md-3'>
					{% block title %}
						<div class="d-sm-flex align-items-center justify-content-between mb-4 text-center">
							<h1 class="h3 mb-0 text-primary">{{ controller.title }}</h1>
						</div>
					{% endblock %}
					{% block content %}
						<div class="row">
							<div class="col-md-12">
								<div class="card p-2">
									{{ controller.printMessages()|raw }}
									{{ controller.echoContent()|raw }}
								</div>
							</div>
						</div>
					{% endblock %}
				</div>
			</div>
		</div>
		{% block footer %}
			<footer class="text-white">
				<div class="container text-center p-3">
					<img class="footer-logo" src="{{ constant("BASE_URL") }}/assets/logo.png"/>
				</div>
				<div class="container">
					<div class="row text-white text-start text-uppercase">
						<div class="col-md-3 col-12 mt-4">
							{{ t("call") }}
							<hr/>
							<a href="https://api.whatsapp.com/send?phone={{ variable("general_enquiries_phone").value }}" target="_blank">
								<img class="img-fluid mb-3" src="{{ constant("BASE_URL") }}/assets/whatsapp-logo.png">
							</a>
						</div>
						<div class="col-md-3 col-12 mt-4">
							{{ t("customer_care") }}
							<hr>
							{% if variable("use_postcode_list").value.getValue() %}
								<div>
									<a href="{{ constant("BASE_URL") }}/delivery">
										{{ t("delivery_days") }}
									</a>
								</div>
							{% endif %}
							<div>
								<a href="{{ constant("BASE_URL") }}/contact">
									{{ t("contact_us") }}
								</a>
							</div>
							{% if not user().isLoggedIn() %}
								<div>
									<a href="{{ constant("BASE_URL") }}/register">
										{{ t("become_a_customer") }}
									</a>
								</div>
							{% endif %}							
						</div>
						<div class="col-md-3 col-12 mt-4">
							{{ t("our_website") }}
							<hr class="footer-hr">
							<div>
								<a href="{{ constant("BASE_URL") }}/page/about-us">
									{{ t("about_us") }}
								</a>
							</div>
							<div>
								<a href="{{ constant("BASE_URL") }}/page/privacy-policy">
									{{ t("privacy_policy") }}
								</a>
							</div>
							<div>
								<a href="{{ constant("BASE_URL") }}/page/terms-and-conditions">
									{{ t("terms_and_conditions")|raw }}
								</a>
							</div>
						</div>
						<div class="col-md-3 col-12 mt-4">
							{{ t("explore_more") }}
							<hr class="footer-hr">
							<div>
								<a href="{{ constant("BASE_URL") }}/page/how-to">
									{{ t("how_to") }}
								</a>
							</div>
							<div>
								<a href="{{ constant("BASE_URL") }}/blogs">
									{{ t("blog") }}
								</a>
							</div>
						</div>

					</div>
				</div>
				<div class="container text-center">
					<small>Â© Copyright {{ 'now' | date('Y') }}, {{ variable("site_name").value }} All Rights Reserved.
						<div class="container text-center p-3">
							{% set facebook = variable("facebook_url") %}
							{% if facebook.value.value %}
								<a href="{{ facebook.value.value }}" target="_blank">
									<i class="fab fa-facebook-square"></i>
								</a>
							{% endif %}
							{% set instagram = variable("instagram_url") %}
							{% if instagram.value.value %}
								<a href="{{ instagram.value.value }}" target="_blank">
									<i class="fab fa-instagram"></i>
								</a>
							{% endif %}
							{% set twitter = variable("twitter_url") %}
							{% if twitter.value.value %}
								<a href="{{ twitter.value.value }}" target="_blank">
									<i class="fab fa-twitter-square"></i>
								</a>
							{% endif %}
							{% set linkedin = variable("linkedin_url") %}
							{% if linkedin.value.value %}
								<a href="{{ linkedin.value.value }}" target="_blank">
									<i class="fab fa-linkedin"></i>
								</a>
							{% endif %}
						</div>

					</small>
				</div>
			</footer>
		{% endblock %}
	</body>
</html>
