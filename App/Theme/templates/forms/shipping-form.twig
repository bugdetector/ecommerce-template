{% extends "forms/form.twig" %}
{% block fields %}
	{% if form.collectionEnabled %}

		<div class="card card-flip h-100 shipping">
			<div class="card-front text-light">
				<div class="text-center px-3 d-flex">
					<div class="card rounded m-1 p-3 btn btn-outline-warning shipping-option
										{{ form.fields[" shipping_option"].value == " collection" ? " active" : " " }}" data-option="collection">
						<h4>{{ t("collection") }}</h4>
						<img src="{{ constant("BASE_URL") }}/assets/location.svg">
					</div>
					<div class="card rounded m-1 p-3 btn btn-outline-success shipping-option
										{{ form.fields[" shipping_option"].value == " delivery" ? " active" : " " }}" data-option="delivery">
						<h4>{{ t("delivery") }}</h4>
						<img src="{{ constant("BASE_URL") }}/assets/delivery.svg">
					</div>
				</div>
			</div>
			<div class="card-back bg-light">
				<div class="card-body w-100">
					<a href="#" class="btn btn-sm btn-outline-primary form-back mb-2">
						<span class="fa fa-chevron-left me-2"></span>
						{{ t("back") }}
					</a>
					{% for field in form.fields %}
						<div class="form-group">
							{{ field }}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	{% else %}
		<div class="card bg-light">
				<div class="card-body w-100">
					<a href="#" class="btn btn-sm btn-outline-primary form-back mb-2">
						<span class="fa fa-chevron-left me-2"></span>
						{{ t("back") }}
					</a>
					{% for field in form.fields %}
						<div class="form-group">
							{{ field }}
						</div>
					{% endfor %}
				</div>
			</div>
	{% endif %}
{% endblock %}
